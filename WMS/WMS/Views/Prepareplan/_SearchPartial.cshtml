<script type="text/javascript">

    function searchClick() {
        $('#PLAN_DATE').datebox({
            hasDownArrow: true
        });
        $('#LATE_PREPARE_DATETIME').datebox({
            hasDownArrow: true
        });
        $('#SEND_DATETIME').datebox({
            hasDownArrow: true
        });
        $('#REC_DT').datebox({
            hasDownArrow: true
        });
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    };

    function Sselect() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.PLAN_DATE = $('#PLAN_DATE').val();
        queryParams.LATE_PREPARE_DATETIME = $('#LATE_PREPARE_DATETIME').val();
        queryParams.MAT_CD = $('#MAT_CD').combogrid('getValue');
        queryParams.BATCHES = $('#BATCHES').val();
        queryParams.SENDER = $('#SENDER').val();
        queryParams.SEND_DATETIME = $('#SEND_DATETIME').val();
        queryParams.RECEIVER = $('#RECEIVER').val();
        queryParams.REC_DT = $('#REC_DT').val();
        $('#details').datagrid('options').queryParams = queryParams;
        //        $('#details').datagrid({
        //            pageNumber: 1,
        //            pageSize: 10
        //        });
        $('#details').datagrid('reload');
        $('#dlg-search').dialog('close');
    }

</script>

