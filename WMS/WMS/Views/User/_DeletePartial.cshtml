<script type="text/javascript">
    function deleteClick() {
        document.getElementById("userNameError").innerText = "";
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '删除');
            $('#fm .easyui-validatebox').validatebox({
                required: false
            });
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#c1').combo({
                hasDownArrow: false
            });
            $('#c2').combo({
                hasDownArrow: false
            });
            $('#fm').form('clear');
            $('#fm').form('load', row);
            if (row.IS_LOCK == '是') {
                $('#c1').combo('setValue', 1).combo('setText', row.IS_LOCK);
            } else {
                $('#c1').combo('setValue', 0).combo('setText', row.IS_LOCK);
            }
            if (row.IS_ADMIN == '是') {
                $('#c2').combo('setValue', 1).combo('setText', row.IS_ADMIN);
            } else {
                $('#c2').combo('setValue', 0).combo('setText', row.IS_ADMIN);
            }
            url = '/User/Delete/?USER_ID=' + row.USER_ID;
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
