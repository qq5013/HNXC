<script type="text/javascript">
function editClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        $('#dlg').dialog('open').dialog('setTitle', '编辑');
        $('#fm').form('load', row);
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        if (row.STATUS == '启用') {
            $('#cc').combo('setValue', 1).combo('setText', row.STATUS);
        } else {
            $('#cc').combo('setValue', 0).combo('setText', row.STATUS);
        }
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#cc').combo({
            hasDownArrow: true
        });
        url = '/System/Edit/?SYSTEM_ID=' + row.SYSTEM_ID;
    } else {
        $.messager.confirm('错误', '没有选择行！');
    }
};
</script>
   