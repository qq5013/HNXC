<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '删除');
            $('#fm .easyui-validatebox').validatebox({
                required: false
            });
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#cc').combo({
                hasDownArrow: true
            });
            $('#fm').form('load', row);
            if (row.IS_LOCK == '启用') {
                $('#cc').combo('setValue', 1).combo('setText', row.IS_LOCK);
            } else {
                $('#cc').combo('setValue', 0).combo('setText', row.IS_LOCK);
            }
            url = '/Role/Delete/?ROLE_ID=' + row.ROLE_ID;
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
