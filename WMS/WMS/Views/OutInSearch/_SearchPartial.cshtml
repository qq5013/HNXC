<script type="text/javascript">
    function searchClick() {
        $('#dlg-search input').val("");
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
        $('#IN_DATE').datebox({ editable: false });
    }

  //查询
    function Sselect() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.BILL_NO = $('#SBILL_NO').val();
        queryParams.IN_DATE = $('#IN_DATE').datebox('getValue');

        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1
        });
        $('#details').datagrid('options').url = "/OutInSearch/Details/";
        $('#SubDetails').datagrid('loadData', { total: 0, rows: [] });
        $('#details').datagrid('reload');
        $('#SubDetails').datagrid('reload');
        $('#dlg-search').dialog('close');
        $('#dlg-search input').val("");
     }
</script>


